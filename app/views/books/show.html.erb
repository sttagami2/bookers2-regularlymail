<!-- エラーメッセージ表示-->
<% if @book.errors.any? %>
	<h3><%= @book.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->

<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg" %><br>
						<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				
				<% if @book.user.id == current_user.id %>
					<td id="favorite-<%= @book.id %>">
						<%= render 'favorite', book: @book %>
					</td>

					<td id="count">
						<%= render partial: 'book_comments/count', locals: { comments: @comments, book: @book } %>
					</td>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy", @book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% else %>
					<td id="favorite-<%= @book.id %>">
						<%= render 'favorite', book: @book %>
					</td>
					<td id="count">
						<%= render partial: 'book_comments/count', locals: { comments: @comments } %>
					</td>
				<% end %>
			</tr>
		</table>
		<hr>

		<div id="comments_area">
			<%= render partial: 'book_comments/index', locals: { comments: @comments } %>
		</div>

		<% if user_signed_in? %>
			<%= render partial: 'book_comments/form', locals: { comment: @comment, book: @book } %>
		<% end %>
	</div>
</div>

